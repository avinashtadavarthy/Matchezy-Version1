<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".messagestab.Fragment_messages">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:text="PEOPLE WHO LIKED YOU BACK"
        android:textSize="13dp"
        android:textColor="@color/appgrey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/circularstdbook"
        android:layout_height="wrap_content" />

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <android.support.v7.widget.RecyclerView
               android:id="@+id/horizontal_recycler_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="8dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ProgressBar
                   android:id="@+id/matchedProfilesProgressBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="16dp"
                   android:layout_gravity="center_horizontal"
                   android:indeterminateTint="@color/colorAccent"/>

           </LinearLayout>


       </RelativeLayout>

       <ImageView
           android:layout_width="match_parent"
           android:background="#1F000000"
           android:layout_marginStart="20dp"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="10dp"
           android:layout_height="2dp" />

       <TextView
           android:layout_width="match_parent"
           android:text="CONVERSATIONS"
           android:textSize="13dp"
           android:textColor="@color/appgrey"
           android:layout_marginLeft="13dp"
           android:fontFamily="@font/circularstdbook"
           android:layout_height="wrap_content" />

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <android.support.v7.widget.RecyclerView
           android:id="@+id/conversations_recycler"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ProgressBar
                   android:id="@+id/conversationsProgressBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="16dp"
                   android:layout_gravity="center_horizontal"
                   android:indeterminateTint="@color/colorAccent"/>

           </LinearLayout>

       </RelativeLayout>


   </LinearLayout>

</FrameLayout>