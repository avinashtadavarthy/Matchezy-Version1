<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat.Chat"
    android:background="#eaeaea">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:elevation="8dp"
            android:background="@color/appred">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="14dp"
                android:src="@drawable/back"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/chat_head_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerInParent="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_head_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/guy"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:id="@+id/messageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/linearLayout"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="@drawable/send_message_box"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/addMessageImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/small_round"
            android:src="@drawable/fab_add"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageEditText"
            android:hint="Type a message"
            android:background="@color/white"
            android:fontFamily="@font/sourcesansproregular"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:maxLines="8"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:enabled="false"
            android:background="@drawable/small_round"
            android:src="@drawable/send_airplane"
            android:padding="6dp"
            android:elevation="5dp"
            android:id="@+id/sendButton"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>